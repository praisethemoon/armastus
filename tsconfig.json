{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "game",
    "types": [
      "lua-types/jit",
      "love-typescript-definitions",
      "@typescript-to-lua/language-extensions"
    ],
    "jsx": "react",
    "jsxFactory": "Arma.createElement"
  },
  "tstl": {
    "luaLibImport": "require",
    "luaTarget": "JIT",
    "noImplicitSelf": true,
    "sourceMapTraceback": true
  }
}
